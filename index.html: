    showDashboard() {
        const exams = JSON.parse(localStorage.getItem('examExams') || '[]');
        const results = JSON.parse(localStorage.getItem('examResults') || '[]');
        const userResults = results.filter(r => r.userId === this.currentUser.id);

        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = `
            <div class="dashboard">
                <div class="welcome-section">
                    <h1>Welcome back, ${this.currentUser.name}!</h1>
                    <p>Ready to test your knowledge? Take an exam or check your results.</p>
                </div>
                
                <div class="stats-grid">
                    <div class="stat-card">
                        <i class="fas fa-file-alt"></i>
                        <h3>${exams.length}</h3>
                        <p>Available Exams</p>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-check-circle"></i>
                        <h3>${userResults.length}</h3>
                        <p>Exams Completed</p>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-chart-line"></i>
                        <h3>${this.calculateAverageScore(userResults)}%</h3>
                        <p>Average Score</p>
                    </div>
                    <div class="stat-card">
                        <i class="fas fa-trophy"></i>
                        <h3>${this.getHighestScore(userResults)}%</h3>
                        <p>Highest Score</p>
                    </div>
                </div>
                
                <div class="quick-actions">
                    <h2>Quick Actions</h2>
                    <div class="exams-grid">
                        ${exams.slice(0, 3).map(exam => `
                            <div class="exam-card">
                                <div class="exam-header">
                                    <h3 class="exam-title">${exam.title}</h3>
                                    <span class="exam-status status-active">Available</span>
                                </div>
                                <div class="exam-details">
                                    <p><i class="fas fa-user"></i> ${exam.instructor}</p>
                                    <p><i class="fas fa-clock"></i> ${exam.duration} minutes</p>
                                    <p><i class="fas fa-question-circle"></i> ${exam.questions.length} questions</p>
                                </div>
                                <div class="exam-actions">
                                    <button class="btn-start" onclick="examSystem.startExam(${exam.id})">
                                        Start Exam
                                    </button>
                                </div>
                            </div>
                        `).join('')}
                    </div>
                </div>
            </div>
        `;
    }

    showExamsList() {
        const exams = JSON.parse(localStorage.getItem('examExams') || '[]');
        const results = JSON.parse(localStorage.getItem('examResults') || '[]');
        
        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = `
            <div class="dashboard">
                <h1>Available Exams</h1>
                <p>Select an exam to begin your test</p>
                
                <div class="exams-grid">
                    ${exams.map(exam => {
                        const userResult = results.find(r => 
                            r.examId === exam.id && r.userId === this.currentUser.id
                        );
                        const status = userResult ? 'completed' : 'active';
                        const statusText = userResult ? 'Completed' : 'Available';
                        
                        return `
                            <div class="exam-card">
                                <div class="exam-header">
                                    <h3 class="exam-title">${exam.title}</h3>
                                    <span class="exam-status status-${status}">${statusText}</span>
                                </div>
                                <div class="exam-details">
                                    <p><i class="fas fa-user"></i> Instructor: ${exam.instructor}</p>
                                    <p><i class="fas fa-clock"></i> Duration: ${exam.duration} minutes</p>
                                    <p><i class="fas fa-question-circle"></i> Questions: ${exam.questions.length}</p>
                                    <p><i class="fas fa-percentage"></i> Passing: ${exam.passingScore}%</p>
                                </div>
                                <div class="exam-actions">
                                    ${userResult ? `
                                        <button class="btn-view" onclick="examSystem.showResult(${userResult.id})">
                                            View Result
                                        </button>
                                    ` : `
                                        <button class="btn-start" onclick="examSystem.startExam(${exam.id})">
                                            Start Exam
                                        </button>
                                    `}
                                </div>
                            </div>
                        `;
                    }).join('')}
                </div>
            </div>
        `;
    }

    startExam(examId) {
        const exams = JSON.parse(localStorage.getItem('examExams') || '[]');
        this.currentExam = exams.find(e => e.id === examId);
        
        if (!this.currentExam) {
            alert('Exam not found!');
            return;
        }

        // Initialize user answers
        this.userAnswers = new Array(this.currentExam.questions.length).fill(null);
        this.currentQuestion = 0;
        this.examStartTime = new Date();
        this.timeLeft = this.currentExam.duration * 60; // Convert to seconds

        this.showExamInterface();
        this.startTimer();
    }

    showExamInterface() {
        const exam = this.currentExam;
        const currentQ = exam.questions[this.currentQuestion];
        const isLastQuestion = this.currentQuestion === exam.questions.length - 1;

        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = `
            <div class="exam-container">
                <div class="exam-header-bar">
                    <h2>${exam.title}</h2>
                    <div class="timer" id="exam-timer">
                        <i class="fas fa-clock"></i>
                        <span id="time-display">${this.formatTime(this.timeLeft)}</span>
                    </div>
                    <div class="question-counter">
                        Question ${this.currentQuestion + 1} of ${exam.questions.length}
                    </div>
                </div>

                <div class="question-container">
                    <h3 class="question-text">${currentQ.text}</h3>
                    <div class="options-container">
                        ${currentQ.options.map((option, index) => `
                            <div class="option ${this.userAnswers[this.currentQuestion] === index ? 'selected' : ''}" 
                                 onclick="examSystem.selectAnswer(${index})">
                                <div class="option-letter">${String.fromCharCode(65 + index)}</div>
                                <div class="option-text">${option}</div>
                            </div>
                        `).join('')}
                    </div>
                </div>

                <div class="navigation-buttons">
                    <button class="btn-prev" ${this.currentQuestion === 0 ? 'disabled' : ''} 
                            onclick="examSystem.prevQuestion()">
                        <i class="fas fa-arrow-left"></i> Previous
                    </button>
                    
                    <div>
                        ${isLastQuestion ? `
                            <button class="btn-submit" onclick="examSystem.submitExam()">
                                Submit Exam <i class="fas fa-paper-plane"></i>
                            </button>
                        ` : `
                            <button class="btn-next" onclick="examSystem.nextQuestion()">
                                Next <i class="fas fa-arrow-right"></i>
                            </button>
                        `}
                    </div>
                </div>

                <div class="question-navigation">
                    ${exam.questions.map((_, index) => `
                        <button class="question-nav-btn 
                                    ${this.userAnswers[index] !== null ? 'answered' : ''}
                                    ${index === this.currentQuestion ? 'current' : ''}"
                                onclick="examSystem.goToQuestion(${index})">
                            ${index + 1}
                        </button>
                    `).join('')}
                </div>
            </div>
        `;

        this.updateTimerDisplay();
    }

    selectAnswer(answerIndex) {
        this.userAnswers[this.currentQuestion] = answerIndex;
        
        // Update UI
        const options = document.querySelectorAll('.option');
        options.forEach((option, index) => {
            option.classList.toggle('selected', index === answerIndex);
        });

        // Update navigation button
        const navBtn = document.querySelector(`.question-nav-btn:nth-child(${this.currentQuestion + 1})`);
        navBtn.classList.add('answered');
    }

    nextQuestion() {
        if (this.currentQuestion < this.currentExam.questions.length - 1) {
            this.currentQuestion++;
            this.showExamInterface();
        }
    }

    prevQuestion() {
        if (this.currentQuestion > 0) {
            this.currentQuestion--;
            this.showExamInterface();
        }
    }

    goToQuestion(index) {
        this.currentQuestion = index;
        this.showExamInterface();
    }

    startTimer() {
        clearInterval(this.examTimer);
        
        this.examTimer = setInterval(() => {
            this.timeLeft--;
            this.updateTimerDisplay();
            
            if (this.timeLeft <= 0) {
                clearInterval(this.examTimer);
                this.submitExam();
            } else if (this.timeLeft <= 60) {
                // Last minute warning
                const timerElement = document.getElementById('exam-timer');
                if (timerElement) {
                    timerElement.classList.add('warning');
                }
            }
        }, 1000);
    }

    updateTimerDisplay() {
        const timeDisplay = document.getElementById('time-display');
        if (timeDisplay) {
            timeDisplay.textContent = this.formatTime(this.timeLeft);
        }
    }

    formatTime(seconds) {
        const minutes = Math.floor(seconds / 60);
        const secs = seconds % 60;
        return `${minutes.toString().padStart(2, '0')}:${secs.toString().padStart(2, '0')}`;
    }

    submitExam() {
        clearInterval(this.examTimer);
        
        // Calculate score
        const exam = this.currentExam;
        let correctAnswers = 0;
        
        exam.questions.forEach((question, index) => {
            if (this.userAnswers[index] === question.correctAnswer) {
                correctAnswers++;
            }
        });
        
        const score = (correctAnswers / exam.questions.length) * 100;
        const passed = score >= exam.passingScore;
        const timeTaken = this.currentExam.duration * 60 - this.timeLeft;
        
        // Save result
        const results = JSON.parse(localStorage.getItem('examResults') || '[]');
        const result = {
            id: Date.now(),
            userId: this.currentUser.id,
            examId: exam.id,
            examTitle: exam.title,
            score: score.toFixed(2),
            correctAnswers,
            totalQuestions: exam.questions.length,
            passed,
            timeTaken: Math.floor(timeTaken / 60), // minutes
            submittedAt: new Date().toISOString(),
            answers: this.userAnswers.map((answer, index) => ({
                questionId: exam.questions[index].id,
                selectedAnswer: answer,
                correctAnswer: exam.questions[index].correctAnswer,
                isCorrect: answer === exam.questions[index].correctAnswer
            }))
        };
        
        results.push(result);
        localStorage.setItem('examResults', JSON.stringify(results));
        
        this.showResult(result.id);
    }

    showResult(resultId) {
        const results = JSON.parse(localStorage.getItem('examResults') || '[]');
        const result = results.find(r => r.id === resultId);
        
        if (!result) {
            alert('Result not found!');
            return;
        }

        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = `
            <div class="result-card">
                <div class="result-header">
                    <h1>${result.passed ? 'üéâ Congratulations!' : 'üìù Exam Result'}</h1>
                    <p>You have ${result.passed ? 'passed' : 'not passed'} the exam</p>
                    
                    <div class="score-circle ${result.passed ? 'text-success' : 'text-danger'}">
                        ${result.score}
                    </div>
                    
                    <h2>${result.examTitle}</h2>
                </div>
                
                <div class="result-details">
                    <div class="detail-item">
                        <h4>Score</h4>
                        <p class="${result.passed ? 'text-success' : 'text-danger'}">${result.score}%</p>
                    </div>
                    <div class="detail-item">
                        <h4>Correct Answers</h4>
                        <p>${result.correctAnswers}/${result.totalQuestions}</p>
                    </div>
                    <div class="detail-item">
                        <h4>Time Taken</h4>
                        <p>${result.timeTaken} minutes</p>
                    </div>
                    <div class="detail-item">
                        <h4>Status</h4>
                        <p class="${result.passed ? 'text-success' : 'text-danger'}">
                            ${result.passed ? 'Passed ‚úÖ' : 'Failed ‚ùå'}
                        </p>
                    </div>
                </div>
                
                <div class="question-review">
                    <h3>Question Review</h3>
                    ${this.getExamQuestions(result.examId).map((question, index) => {
                        const userAnswer = result.answers[index];
                        return `
                            <div class="question-review-item">
                                <h4>Q${index + 1}: ${question.text}</h4>
                                <div class="answers">
                                    <p><strong>Your Answer:</strong> 
                                        <span class="${userAnswer.isCorrect ? 'text-success' : 'text-danger'}">
                                            ${question.options[userAnswer.selectedAnswer] || 'Not answered'}
                                            ${userAnswer.isCorrect ? ' ‚úì' : ' ‚úó'}
                                        </span>
                                    </p>
                                    ${!userAnswer.isCorrect ? `
                                        <p><strong>Correct Answer:</strong> 
                                            <span class="text-success">
                                                ${question.options[question.correctAnswer]}
                                            </span>
                                        </p>
                                    ` : ''}
                                </div>
                            </div>
                        `;
                    }).join('')}
                </div>
                
                <div class="result-actions">
                    <button class="btn-primary" onclick="examSystem.showExamsList()">
                        Back to Exams
                    </button>
                    <button class="btn-start" onclick="examSystem.startExam(${result.examId})">
                        Retake Exam
                    </button>
                </div>
            </div>
        `;
    }

    showResults() {
        const results = JSON.parse(localStorage.getItem('examResults') || '[]');
        const userResults = results.filter(r => r.userId === this.currentUser.id);

        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = `
            <div class="dashboard">
                <h1>Your Exam Results</h1>
                <p>View your performance history</p>
                
                ${userResults.length === 0 ? `
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        You haven't taken any exams yet. Start your first exam!
                    </div>
                ` : `
                    <div class="results-list">
                        ${userResults.map(result => `
                            <div class="result-item">
                                <div class="result-header">
                                    <h3>${result.examTitle}</h3>
                                    <span class="score ${result.passed ? 'text-success' : 'text-danger'}">
                                        ${result.score}%
                                    </span>
                                </div>
                                <div class="result-details">
                                    <p><i class="fas fa-calendar"></i> ${new Date(result.submittedAt).toLocaleDateString()}</p>
                                    <p><i class="fas fa-clock"></i> ${result.timeTaken} minutes</p>
                                    <p><i class="fas fa-check-circle"></i> ${result.correctAnswers}/${result.totalQuestions} correct</p>
                                </div>
                                <button class="btn-view" onclick="examSystem.showResult(${result.id})">
                                    View Details
                                </button>
                            </div>
                        `).join('')}
                    </div>
                `}
            </div>
        `;
    }

    showProfile() {
        const mainContent = document.getElementById('main-content');
        mainContent.innerHTML = `
            <div class="dashboard">
                <div class="profile-header">
                    <div class="avatar">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    <h1>${this.currentUser.name}</h1>
                    <p class="user-role">
                        <i class="fas fa-user-tag"></i> 
                        ${this.currentUser.role.charAt(0).toUpperCase() + this.currentUser.role.slice(1)}
                    </p>
                </div>
                
                <div class="profile-info">
                    <div class="info-card">
                        <h3><i class="fas fa-envelope"></i> Email</h3>
                        <p>${this.currentUser.email}</p>
                    </div>
                    <div class="info-card">
                        <h3><i class="fas fa-calendar-alt"></i> Member Since</h3>
                        <p>${new Date(this.currentUser.createdAt).toLocaleDateString()}</p>
                    </div>
                </div>
            </div>
        `;
    }

    calculateAverageScore(results) {
        if (results.length === 0) return 0;
        const total = results.reduce((sum, result) => sum + parseFloat(result.score), 0);
        return (total / results.length).toFixed(1);
    }

    getHighestScore(results) {
        if (results.length === 0) return 0;
        return Math.max(...results.map(r => parseFloat(r.score))).toFixed(1);
    }

    getExamQuestions(examId) {
        const exams = JSON.parse(localStorage.getItem('examExams') || '[]');
        const exam = exams.find(e => e.id === examId);
        return exam ? exam.questions : [];
    }
}

// Initialize auth system
let authSystem;
let examSystem;

// Make functions available globally
window.selectAnswer = (index) => examSystem.selectAnswer(index);
window.prevQuestion = () => examSystem.prevQuestion();
window.nextQuestion = () => examSystem.nextQuestion();
window.goToQuestion = (index) => examSystem.goToQuestion(index);
window.submitExam = () => examSystem.submitExam();
script.js:
// Main Application Initialization
document.addEventListener('DOMContentLoaded', function() {
    // Initialize authentication system
    authSystem = new AuthSystem();
    
    // Initialize exam system when user is logged in
    if (authSystem.currentUser) {
        examSystem = new ExamSystem(authSystem.currentUser);
        examSystem.showDashboard();
    }
});

// Mobile menu toggle
document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuBtn = document.querySelector('.mobile-menu');
    const navLinks = document.querySelector('.nav-links');
    
    if (mobileMenuBtn) {
        mobileMenuBtn.addEventListener('click', function() {
            navLinks.style.display = navLinks.style.display === 'flex' ? 'none' : 'flex';
            if (navLinks.style.display === 'flex') {
                navLinks.style.flexDirection = 'column';
                navLinks.style.position = 'absolute';
                navLinks.style.top = '100%';
                navLinks.style.left = '0';
                navLinks.style.right = '0';
                navLinks.style.background = 'white';
                navLinks.style.padding = '1rem';
                navLinks.style.boxShadow = '0 4px 20px rgba(0,0,0,0.1)';
            }
        });
    }
    
    // Close mobile menu when clicking outside
    document.addEventListener('click', function(event) {
        if (!event.target.closest('.nav-container')) {
            if (window.innerWidth <= 768) {
                navLinks.style.display = 'none';
            }
        }
    });
});

// Make examSystem globally accessible
window.examSystem = examSystem;
window.authSystem = authSystem;
